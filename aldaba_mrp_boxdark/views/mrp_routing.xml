<?xml version="1.0"?>
<odoo>
    <!-- View inherit Form mrp.bom -->
    <record model="ir.ui.view" id="mrp_bom_form_view_inherited_aldaba">
        <field name="name">mrp.bom.form.view.inherited.aldaba</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="model">mrp.bom</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_row']" position="after">
                <field name="routing_id" required="True"/>
            </xpath>
        </field>
    </record>

    <!-- Routings -->
    <record id="mrp_routing_aldaba_form_view" model="ir.ui.view">
        <field name="name">mrp.routing.form</field>
        <field name="model">mrp.routing</field>
        <field name="arch" type="xml">
            <form string="Routing">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="location_id" domain="[('usage', '!=', 'view')]"/>
                            <field name="company_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Work Center Operations">
                            <field name="operation_ids" context="{'default_company_id': company_id,
                            'tree_view_ref': 'mrp.mrp_routing_workcenter_bom_tree_view'}" widget="mrp_one2many_with_copy"/>
                        </page>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mrp_routing_aldaba_tree_view" model="ir.ui.view">
        <field name="name">mrp.routing.tree</field>
        <field name="model">mrp.routing</field>
        <field name="arch" type="xml">
            <tree string="Routing">
                <field name="code"/>
                <field name="name"/>
                <field name="active" invisible="1"/>
                <field name="location_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="mrp_routing_aldaba_kanban_view" model="ir.ui.view">
        <field name="name">mrp.routing.kanban</field>
        <field name="model">mrp.routing</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="code"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title"><span><t t-esc="record.name.value"/></span></strong>
                                </div>
                                <span class="badge badge-pill"><field name="code"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="mrp_routing_search_view" model="ir.ui.view">
        <field name="name">mrp.routing.search</field>
        <field name="model">mrp.routing</field>
        <field name="arch" type="xml">
            <search string="Routing">
                <field name="name" string="Routing" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <field name="location_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <group expand="0" string="Group By...">
                    <filter string="Production Location" name="production_location" domain="[]" context="{'group_by':'location_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="mrp_routing_action" model="ir.actions.act_window">
        <field name="name">Routings</field>
        <field name="res_model">mrp.routing</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new routing
            </p><p>
            Routings define the successive operations that need to be
            done to realize a Manufacturing Order. Each operation from
            a Routing is done at a specific Work Center and has a specific duration.
            </p>
        </field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('mrp_routing_aldaba_tree_view')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('mrp_routing_aldaba_form_view')})]"/>
    </record>

    <menuitem id="menu_mrp_routing_action_item00" name='Routings' action="mrp_routing_action" parent="mrp.menu_mrp_bom" sequence="50"/>
</odoo>
